FROM python:3.11-slim
WORKDIR /app

# Chemins relatifs au CONTEXTE (ui/)
COPY requirements-ui.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

COPY app.py /app/app.py

# En local Windows: host.docker.internal = machine hôte (où tourne l'API mappée sur 8000)
ENV API_URL=http://host.docker.internal:8000

EXPOSE 8501
CMD ["streamlit","run","/app/app.py","--server.address","0.0.0.0","--server.port","8501"]
