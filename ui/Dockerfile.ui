FROM python:3.11-slim
WORKDIR /app

COPY ui/requirements-ui.txt ./requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

COPY ui ./ui

# par d√©faut, on parlera au service "api" de docker compose
